{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "plugins": [
      "mocha"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:mocha/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2016
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "mocha/no-setup-in-describe": 0
    }
}
